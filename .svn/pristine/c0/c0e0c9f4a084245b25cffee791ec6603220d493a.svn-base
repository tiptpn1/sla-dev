<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Illuminate\Support\Facades\DB;
use Illuminate\Support\Facades\Validator;
use App\User;

class AuthController extends Controller
{
    public function login()
    {
        return view('auth/login');
    }

    public function actionLogin(Request $request)
    {
        $validator = Validator::make($request->all(), [
            'username' => 'required',
            'password' => 'required',
        ]);
        if ($validator->fails()) {
            return redirect('login')
                ->withErrors($validator)
                ->withInput();
        }

        $credentials = $request->only('username', 'password');
        //$user = db::table('kpi_master_user')->where('kpi_master_user_nama', $credentials['username'])->first();
        $user = db::table('kpi_master_user')
                ->leftJoin('kpi_master_bagian', 'kpi_master_user.kpi_master_nama_bagian_id', '=', 'kpi_master_bagian.kpi_master_bagian_id')
                ->where('kpi_master_user.kpi_master_user_nama', $credentials['username'])
                ->select('kpi_master_user.*', 'kpi_master_bagian.*')  // Anda bisa menentukan kolom spesifik jika diperlukan
                ->first();
        if ($user && password_verify($credentials['password'], $user->kpi_master_user_password)) {
            $request->session()->regenerate();
            $request->session()->put('id', $user->kpi_master_user_id);
            $request->session()->put('bagian_id', $user->kpi_master_nama_bagian_id);
            $request->session()->put('bagian_nama', $user->kpi_master_bagian_nama);
            $request->session()->put('hak_akses_id', $user->kpi_master_hak_akses_id);
            $request->session()->put('username', $user->kpi_master_user_nama);

            return redirect()->intended('dashboard');
        }
        return redirect('login')
            ->withInput()
            ->withErrors([
                'message' => 'Username atau password salah!!!',
            ]);
    }

    public function logout(Request $request)
    {
        $request->session()->flush();
        $request->session()->regenerate();

        return redirect('/login');
    }
}
